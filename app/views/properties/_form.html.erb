<%= form_for(@property) do |f| %>
  <% if @property.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@property.errors.count, "error") %> prohibited this property from being saved:</h2>

      <ul>
      <% @property.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

<br>
<div class="margin-left">
  <div class="span5 form-left">
  <%= f.fields_for :location do |l| %>
    <div class="field">
      <%= l.label :address1 %><br />
      <%= l.text_field :address1 %>
    </div>
    <div class="field">
      <%= l.label :address2 %><br />
      <%= l.text_field :address2 %>
    </div>
    <div class="field">
      <%= l.label :city %><br />
      <%= l.text_field :city %>
    </div>
    <div class="field">
      <%= l.label :state %><br />
      <%= l.text_field :state %>
    </div>
    <div class="field">
      <%= l.label :zipcode %><br />
      <%= l.text_field :zipcode %>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :price %><br />
    <%= f.text_field :price %>
  </div>
  <div class="field">
    <%= f.label :sell_type %><br />
    <%= f.select :sell_type, [['Rent', 0], ['Sell', 1]] %>
  </div>
  <div class="field">
    <%= f.label :status %><br />
    <%= f.select :status, [['Closed', 0], ['Open', 1]] %>
  </div>



  <div class="field">
    <%= f.label :bedrooms %><br />
    <%= f.text_field :bedrooms %>
  </div>
  <div class="field">
    <%= f.label :full_bathrooms %><br />
    <%= f.text_field :full_bathrooms %>
  </div>
  <div class="field">
    <%= f.label :half_bathrooms %><br />
    <%= f.text_field :half_bathrooms %>
  </div>
</div>

<div class="span5">
  <div class="field">
    <%= f.label :available_on %><br />
    <%= f.date_select :available_on %>
  </div>
  <div class="field">
    <%= f.label :pets_allowed %><br />
    <%= f.check_box :pets_allowed %>
  </div>
  <div class="field">
    <%= f.label :laundry_available %><br />
    <%= f.check_box :laundry_available %>
  </div>
  <div class="field">
    <%= f.label :parking_available %><br />
    <%= f.check_box :parking_available %>
  </div>
  <div class="field">
    <%= f.label :description %><br />
    <%= f.text_area :description %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
</div>
</div>
<% end %>
